@model EmployeeVM

<div class="table-responsive mx-auto">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8">
                    <h2>Employee <b>Details</b></h2>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>@Model.empID</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.empName</td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>@Model.age</td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td>@Model.gender</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model.empPhone</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.email</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.empAddress</td>
                </tr>
                <tr>
                    <th>Position</th>
                    <td>
                        @foreach (var pos in ViewBag.Positions)
                        {
                            if (pos.posID == Model.posID)
                            {
                                @pos.posName
                                break;
                            }
                        }
                    </td>
                </tr>
                
            </tbody>
        </table>
    </div>
</div>

<a asp-action="Index" asp-controller="Employee" class="btn btn-primary">Back to List</a>