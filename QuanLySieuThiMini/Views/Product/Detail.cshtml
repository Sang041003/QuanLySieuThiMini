@model ProductVM

<div class="table-responsive mx-auto">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8">
                    <h2>Product <b>Details</b></h2>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>@Model.proID</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.proName</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>
                        @foreach (var type in ViewBag.Types)
                        {
                            if (type.typeID == Model.typeID)
                            {
                                @type.typeName
                                break;
                            }
                        }
                    </td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>@Model.cost</td>
                </tr>
                @if (User.Identity.IsAuthenticated)
                {
                    <tr>
                        <th>Inventory</th>
                        <td>@Model.inventory</td>
                    </tr>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <tr>
                        <th>State</th>
                        @if (Model.inventory > 0)
                        {
                            <td>Còn hàng</td>
                        }
                        else
                        {
                            <td>Hết hàng</td>
                        }
                    </tr>
                }
                @if(User.IsInRole("Manager")||User.IsInRole("Storage Manager"))
                {
                    <tr>
                        <th>Shelf Location</th>
                        <td>
                            @foreach (var shelf in ViewBag.Shelves)
                            {
                                if (shelf.shelfID == Model.shelfID)
                                {
                                    @shelf.shelfLocation
                                    break;
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-action="Index" asp-controller="Product" class="btn btn-primary">Back to List</a>