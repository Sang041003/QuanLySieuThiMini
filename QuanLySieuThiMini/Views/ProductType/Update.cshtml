@model ProductTypeVM

<h2>Update Type</h2>

<form method="post" asp-controller="ProductType" asp-action="Update">
    <div class="form-group col-md-4">
        <label for="typeID">ID</label>
        <input type="text" asp-for="typeID" required pattern="^(?=.*[A-Za-z])[A-Za-z0-9]+$" class="form-control" />
    </div>
    <div class="form-group col-md-4">
        <label for="typeName">Name</label>
        <input type="text" asp-for="typeName" required pattern="^(?=.*[A-Za-z])[A-Za-z0-9 ]+$" class="form-control"/>
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
</form>